@model List<PhoneBook.Domain.Core.Person>
@if (Model != null && Model.Count > 0)
{
    <section class="content">
        <div class="card">
            <div class="card-body p-0">
                <table class="table table-striped table-bordered table-dark table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 29%" class="text-center">
                                Image
                            </th>
                            <th style="width: 10%" class="text-center">
                                First Name
                            </th>
                            <th style="width: 10%" class="text-center">
                                Last Name
                            </th>
                            <th class="text-center">
                                Email
                            </th>
                            <th style="width: 50%">
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    #
                                </td>
                                <td class="text-center">
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="@item.FirstName's Photo " class="table-avatar" src="">
                                        </li>
                                    </ul>
                                </td>
                                <td class="text-center">
                                    @item.FirstName
                                </td>
                                <td class="text-center">
                                    @item.LastName
                                </td>
                                <td class="text-center">
                                    @item.Email
                                </td>
                                <td class="project-actions top">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        View
                                    </a>
                                    <a class="btn btn-info btn-sm" href="#">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Edit
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
}